using UnityEngine;
using UnityEngine.UI;
using System.Collections;

public class CreateButtonOnClick : MonoBehaviour {

    GameObject button;
    Text text;
    Button button1;
    Image image;

    public void CreateButtons(string ButtonName)
    {
        button = new GameObject("Button");
        button1 = GetComponent<Button>();
        image = GetComponent<Image>();
        button.AddComponent<Text>();
        button.AddComponent<Button>();
        button.AddComponent<Image>();
    }
}


