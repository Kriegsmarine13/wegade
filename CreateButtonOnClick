using UnityEngine;
using UnityEngine.UI;
using System.Collections;

public class CreateButtonOnClick : MonoBehaviour {

    GameObject button;
    Button button1;
    Image image;

    public void CreateButtons(string ButtonName)
    {
        button = new GameObject("NewButton");
        button1 = GetComponent<Button>();
        image = GetComponent<Image>();
        button.AddComponent<Button>();
        button.AddComponent<Image>();
    }

    //not working yet 
    public void buttonParentTransform(Transform Canvas)
    {
        button.transform.SetParent(Canvas);
    }

}



