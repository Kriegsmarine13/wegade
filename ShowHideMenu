using UnityEngine;
using System.Collections;
using UnityEngine.UI;
using UnityEngine.Events;

public class ShowHideMenu : MonoBehaviour {

    public Renderer rend;
    Button MainButton;
    Button.ButtonClickedEvent clickedEvent;

	// Use this for initialization
	void Start () {
        rend = GetComponent<Renderer>();
        rend.enabled = false;
	}
	
	// Update is called once per frame
	void Update () {
        MainButton.onClick.AddListener(this.rendSwitch);
	}

    public void rendSwitch()
    {
        if (!rend.enabled) { rend.enabled = false; }
        else if (rend.enabled) { rend.enabled = true; };
    }
}
